// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model terms {
  id          Int           @id @default(autoincrement())
  number      Int           @unique
  disciplines disciplines[]
}

model disciplines {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  termId             Int
  teacherDisciplines teacherDisciplines[]

  terms terms @relation(fields: [termId], references: [id])
}

model teacherDisciplines {
  id           Int @id @default(autoincrement())
  teacherId    Int
  disciplineId Int

  tests       tests[]
  teachers    teachers    @relation(fields: [teacherId], references: [id])
  disciplines disciplines @relation(fields: [disciplineId], references: [id])
}

model teachers {
  id                 Int                  @id @default(autoincrement())
  name               String
  teacherDisciplines teacherDisciplines[]
}

model categories {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  tests tests[]
}

model tests {
  id                  Int    @id @default(autoincrement())
  name                String
  pdfUrl              String
  categoryId          Int
  teacherDisciplineId Int

  categories         categories         @relation(fields: [categoryId], references: [id])
  teacherDisciplines teacherDisciplines @relation(fields: [teacherDisciplineId], references: [id])
}
